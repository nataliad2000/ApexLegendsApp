<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApexLegendsApp.Views.ServerStatusView">
    <ContentPage.Content>
        <StackLayout x:Name="stacklayout">
            <ActivityIndicator x:Name="ActivityIndicator"/>
            <ScrollView Orientation="Both">
                <StackLayout>
                    <ListView x:Name="lista" WidthRequest="2000" HeightRequest="3999">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding ToString}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView> 
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>